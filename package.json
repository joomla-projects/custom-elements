{
  "name": "joomla-ui-custom-elements",
  "version": "0.0.40",
  "description": "Joomla UI components as custom elements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joomla-projects/custom-elements.git"
  },
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/joomla-projects/custom-elements/issues"
  },
  "homepage": "https://github.com/joomla-projects/custom-elements#readme",
  "main": "Gruntfile.js",
  "keywords": [
    "Joomla",
    "web-components",
    "custom-elements",
    "vanilla-js",
    "javascript"
  ],
  "author": "Dimitrios Grammatikogiannis",
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@lodder/grunt-postcss": "latest",
    "@polymer/test-fixture": "latest",
    "@webcomponents/custom-elements": "latest",
    "@webcomponents/webcomponentsjs": "latest",
    "autoprefixer": "latest",
    "babel-eslint": "latest",
    "babel-minify": "latest",
    "babel-plugin-static-fs": "latest",
    "babelify": "latest",
    "bootstrap": "^4.5.3",
    "browserify": "^17.0.0",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-config-airbnb-base": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-react": "latest",
    "grunt": "latest",
    "grunt-babel": "latest",
    "grunt-browserify": "latest",
    "grunt-contrib-copy": "latest",
    "grunt-contrib-cssmin": "latest",
    "grunt-contrib-uglify-es": "git://github.com/gruntjs/grunt-contrib-uglify.git#harmony",
    "grunt-sass": "^3.0.2",
    "grunt-shell": "latest",
    "node-sass": "^4.14.1",
    "postcss": "^8.2.1",
    "wct-browser-legacy": "latest",
    "web-component-tester": "latest"
  },
  "scripts": {
    "build": "grunt",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "ci-test": "wct --configFile saucelabs.conf.json --plugin sauce"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ],
          "plugins": [
            "static-fs"
          ]
        }
      ]
    ]
  },
  "settings": {
    "prefix": "joomla",
    "elements": [
      "alert",
      "tab",
      "dropdown",
      "collapse",
      "modal",
      "panels",
      "tip"
    ],
    "browsers": "last 1 version"
  }
}
